{% extends 'admin/adminbasefront.html.twig' %}
{% block title %}Ajouter une catégorie{% endblock %}
{% block body %}
    <div class="container mt-5">
        <h1>Créer une catégorie</h1>
        &nbsp;
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            <div class="form-group">
                {{ form_label(form.name, 'Titre', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            &nbsp;
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                    <a href="{{ path('admin.categories') }}" class="btn btn-secondary">Retour</a>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}